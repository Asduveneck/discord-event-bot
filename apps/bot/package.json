{
  "name": "discord-irl-meetup-bot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "dotenv -e ../../.env -- tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "prisma:generate": "dotenv -e ../../.env -- prisma generate --schema prisma/schema.prisma",
    "prisma:migrate:dev": "dotenv -e ../../.env -- prisma migrate dev --schema prisma/schema.prisma",
    "prisma:migrate:deploy": "dotenv -e ../../.env -- prisma migrate deploy --schema prisma/schema.prisma",
    "prisma:reset": "dotenv -e ../../.env -- prisma migrate reset --force --skip-generate --schema prisma/schema.prisma",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0",
    "prisma": "^6.15.0",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4"
  }
}
